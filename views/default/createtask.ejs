<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Task</title>

    <!-- Material Icons -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />

    <!-- UIkit CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/uikit@3.7.6/dist/css/uikit.min.css"
    />

    <!-- Semantic UI -->
    <link
      rel="stylesheet"
      type="text/css"
      href="semantic/dist/semantic.min.css"
    />

    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top navbar"></nav>

    <div class="container-fluid holder"
    >
      <div style="flex: 1">
        <div class="container">
          <table id="addTask" style="margin: 0 auto">
            <tr>
              <td><span class="material-icons"> add</span></td>
              <td>
                <h6 style="margin-left: 10px; color: #aaa492">Add task</h6>
              </td>
            </tr>
          </table>

          <div class="createTask">
            <form
              action="/task/createtask"
              method="post"
              enctype="multipart/form-data"
            >
              <input
                type="text"
                name="title"
                id="input"
                placeholder="e.g Meeting with the CEO..."
                class="tasktitle"
                required
              />
              <textarea
                name="description"
                class="taskdescription"
                id=""
                cols="30"
                rows="2"
                placeholder="Description..."
                required
              ></textarea>
              <table>
                <tr>
                  <td style="padding-left: 20px; margin-bottom: 10px">
                    <label
                      for=""
                      id="click"
                      style="
                        display: flex;
                        align-items: center;
                        border: 1px solid #ccc;
                        width: 150px;
                        border-radius: 10px;
                        padding: 4px;
                      "
                    >
                      <span class="material-icons"> attachment </span>
                      <span>Attach a file</span>
                    </label>
                  </td>
                  <td>
                    <input
                      type="file"
                      name="file"
                      id="file"
                      accept="application/*, audio/*, image/*"
                      style="display: none"
                    />
                  </td>
                </tr>
              </table>
              <div style="display: flex; align-items: center; margin-top: 50px">
                <button type="submit" class="btn" id="btn" disabled>
                  Create task</button
                ><a class="btn" id="cancel">Cancel</a>
              </div>
            </form>
          </div>
          <hr />
          <div
            class="taskDisplay"
            style="width: 100%; height: 500px; overflow-y: scroll"
          >
                <%- include("../messages") %>
            <div class="w-100">
              <a class="btn btn-warning" href="https://accounts.google.com/o/oauth2/v2/auth?access_type=offline&scope=https%3A%2F%2Fwww.googleapis.com%2Fauth%2Fcalendar.events%20https%3A%2F%2Fwww.googleapis.com%2Fauth%2Fcalendar&response_type=code&client_id=322021260824-hfbisjd1knk6u61kncjo9ap7fgkmb5pm.apps.googleusercontent.com&redirect_uri=https%3A%2F%2Ftodobyejoor.herokuapp.com%2Fcalendar">Create an event</a>
              <% if(docs.length>0){%> <% for (let doc of docs) { %>
              <table>
                <tr>
                  <td>
                    <a class="checkbox" href="/task/delete/<%-doc._id%>"
                      ><input
                        type="checkbox"
                        style="cursor: pointer"
                        name=""
                        id="checkbox"
                      />
                      <h6 class="checkbox"><%- doc.title %></h6></a
                    >
                  </td>
                </tr>
                <tr>
                  <td><p><%- doc.description %></p></td>
                </tr>
                  <td>
                    <% if(doc.files.length>0){%>
                    <a href="<%- doc.files %>" download ="file">Dowload attachment</a>
                   <% } else {%>
                <span>No attachment attached</span>
                   <%}%>
                  </td>
                </tr>
                <tr>
                  <td>
                    <label
                      for=""
                      id="click"
                      style="
                        display: flex;
                        align-items: center;
                        border: 1px solid #ccc;
                        border-radius: 10px;
                        padding: 4px;
                        width: 40px;
                        justify-content: center;
                      "
                    >
                      <a
                        href="/task/edit/<%-doc._id%>"
                        class="material-icons edit"
                        uk-tooltip="edit this task"
                      >
                        edit
                      </a>
                    </label>
                  </td>
                  <td>
                    <input
                      type="file"
                      name=""
                      id="file"
                      style="display: none"
                    />
                  </td>
                </tr>
              </table>
              <% }%> <% }else{ %> No Tasks to show here... Click + to create a
              task. <% }%>
            </div>
          </div>
        </div>
      </div>
      <div class="views-container">
        <h5>Todo task for today</h5>
        <div class="views">

        <!-- Start of iteration -->
        <%for (let items of docs){%>
          <!--  -->
          <% if (items.createdAt.getHours() <= 24){%>
          <h6><%-items.title%></h6>
          <p><%-items.description%></p>
          <%}%>
        <% }%>
        </div>
        <h5>Todo tasks for the week</h5>
        <div class="views">

        <!--  -->
        <%for (let items of docs){%>
          <!--  -->
          <% if (items.createdAt.getHours() > 25 && items.createdAt.getHours() < 168){%>
          <!--  -->
            <h6><%-items.title%></h6>
          <p><%-items.description%></p>
          <%}%>
        <% }%>
        </div>
        <h5>Todo tasks for the month</h5>
        <div class="views">
        <!--  -->
        <%for (let items of docs){%>
          <!--  -->
          <% if (items.createdAt.getHours() > 25 && items.createdAt.getHours() > 168){%>
          <!--  -->
            <h6><%-items.title%></h6>
          <p><%-items.description%></p>
          <%}%>
        <% }%>
        </div>
      </div>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.1.1.min.js"
      integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
      crossorigin="anonymous"
    ></script>
    <script src="semantic/dist/semantic.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns"
      crossorigin="anonymous"
    ></script>
    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.7.6/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.7.6/dist/js/uikit-icons.min.js"></script>
    <script src="/js/script.js"></script>
  </body>
</html>
