<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Create Task</title>

    <!-- Material Icons -->
    <link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />

    <!-- UIkit CSS -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/uikit@3.7.6/dist/css/uikit.min.css"
    />

    <!-- Semantic UI -->
    <link
      rel="stylesheet"
      type="text/css"
      href="semantic/dist/semantic.min.css"
    />

    <!-- Bootstrap -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/css/bootstrap.min.css"
      integrity="sha384-B0vP5xmATw1+K9KRQjQERJvTumQW0nPEzvF6L/Z6nronJ3oUOFUFpCjEUQouq2+l"
      crossorigin="anonymous"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <nav class="navbar navbar-default navbar-fixed-top navbar"></nav>

    <div class="container">
      <table id="addTask" style="margin: 0 auto">
        <tr>
          <td><span class="material-icons"> add</span></td>
          <td><h6 style="margin-left: 10px; color: #aaa492">Add task</h6></td>
        </tr>
      </table>
      <div class="createTask">
        <form
          action="/task/createtask"
          method="post"
          enctype="multipart/form-data"
        >
          <input
            type="text"
            name="title"
            id="input"
            placeholder="e.g Meeting with the CEO..."
            class="tasktitle"
            required
          />
          <textarea
            name="description"
            class="taskdescription"
            id=""
            cols="30"
            rows="3"
            placeholder="Description..."
            required
          ></textarea>
          <table>
            <tr>
              <td style="padding-left: 20px; margin-bottom: 10px">
                <label
                  for=""
                  id="click"
                  style="
                    display: flex;
                    align-items: center;
                    border: 1px solid #ccc;
                    width: 150px;
                    border-radius: 10px;
                    padding: 4px;
                  "
                >
                  <span class="material-icons"> attachment </span>
                  <span>Attach a file</span>
                </label>
              </td>
              <td>
                <input
                  type="file"
                  name="file"
                  id="file"
                  accept="application/*"
                  style="display: none"
                />
              </td>
            </tr>
          </table>
          <div style="display: flex; align-items: center; margin-top: 20px">
            <button type="submit" class="btn" id="btn" disabled>
              Create task</button
            ><a class="btn" id="cancel">Cancel</a>
          </div>
        </form>
      </div>
      <div class="taskDisplay">
        <div>
          <% if(docs.length>0){%> <% for (let doc of docs) { %>
          <table>
            <tr>
              <td>
                <a class="checkbox" href="/task/delete/<%-doc._id%>"
                  ><input
                    type="checkbox"
                    style="cursor: pointer"
                    name=""
                    id="checkbox"
                  />
                  <h6 class="checkbox"><%- doc.title %></h6></a
                >
              </td>
            </tr>
            <tr>
              <td><p><%- doc.description %></p></td>
            </tr>
            <tr>
              <td>
                <a href="<%- doc.files %>">View attachment</a>
              </td>
            </tr>
            <tr>
              <td>
                <label
                  for=""
                  id="click"
                  style="
                    display: flex;
                    align-items: center;
                    border: 1px solid #ccc;
                    border-radius: 10px;
                    padding: 4px;
                    width: 40px;
                    justify-content: center;
                  "
                >
                  <a
                    href="/task/edit/<%-doc._id%>"
                    class="material-icons edit"
                    uk-tooltip="edit this task"
                  >
                    edit
                  </a>
                </label>
              </td>
              <td>
                <input type="file" name="" id="file" style="display: none" />
              </td>
            </tr>
          </table>

          <form action="" class="getForm">
            <div>
              <input
                type="text"
                name=""
                id=""
                class=""
                style="
                  width: 250px;
                  border-radius: 10px;
                  padding: 4px;
                  border: none;
                  outline: none;
                "
                placeholder="here.."
              />
            </div>
            <div class="form-group my-2">
              <textarea
                name=""
                id=""
                cols="38"
                rows="3"
                style="
                  border-radius: 10px;
                  padding: 4px;
                  border: none;
                  outline: none;
                  resize: none;
                "
                placeholder="here.."
              ></textarea>
            </div>
            <div style="display: flex">
              <button type="submit" class="btn btn-primary w-25">save</button>
              <a class="btn btn-danger ml-4 w-25" id="hideForm"> cancel </a>
            </div>
            <div class="mt-3">
              <label
                for=""
                id="click"
                style="
                  display: flex;
                  align-items: center;
                  border: 1px solid #ccc;
                  width: 150px;
                  border-radius: 10px;
                  padding: 4px;
                "
              >
                <span class="material-icons"> attachment </span>
                <span>Attach a file</span>
              </label>
            </div>
          </form>
          <% }%> <% }else{ %> No Tasks to show here... Click + to create a task.
          <% }%>
        </div>
      </div>
    </div>

    <script
      src="https://code.jquery.com/jquery-3.1.1.min.js"
      integrity="sha256-hVVnYaiADRTO2PzUGmuLJr8BLUSjGIZsDYGmIJLv2b8="
      crossorigin="anonymous"
    ></script>
    <script src="semantic/dist/semantic.min.js"></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-Piv4xVNRyMGpqkS2by6br4gNJ7DXjqk09RmUpJ8jgGtD7zP9yug3goQfGII0yAns"
      crossorigin="anonymous"
    ></script>
    <!-- UIkit JS -->
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.7.6/dist/js/uikit.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/uikit@3.7.6/dist/js/uikit-icons.min.js"></script>
    <script src="/js/script.js"></script>
  </body>
</html>
